---
const { class: className } = Astro.props;
---

<div class={`md-renderer max-w-6xl mx-auto  text-balance ${className || ""}`}>
  <slot />
</div>

<style is:global>
  .md-renderer {
    font-weight: 500;

    h1 {
      font-size: 3em;
      margin-bottom: 0.2em;
    }
    h2 {
      font-size: 2em;
      padding-top: 0.5em;
      border-bottom: 1px solid rgba(var(--color-dark), 0.12);
      margin-bottom: 0.5em;
    }
    h3 {
      font-size: 1.3em;
      padding-top: 0.5em;
      font-weight: bold;
      margin-bottom: 0.2em;
    }
    p {
      margin-bottom: 1em;
    }
    pre {
      padding: 0.4em 1em;
      border-radius: 0.3em;
      margin-bottom: 1em;
      white-space: pre-wrap;
      background-color: rgba(var(--color-light), 1) !important;
    }
    code {
      padding: 0.2em 0.4em;
      border-radius: 0.3em;
      background-color: rgba(var(--color-light), 1);
    }
    a {
      color: rgb(var(--color-primary));
      text-decoration: underline;

      &:hover {
        opacity: 0.7;
      }
    }
    ul {
      list-style: outside disc;
      margin-bottom: 1em;
      padding-left: 1.2em;

      li {
        padding: 0.4em 0;
      }
    }
    ul.contains-task-list {
      list-style: outside none;
      padding-left: 0;
    }
    ol {
      list-style: outside decimal;
      margin-bottom: 1em;
      padding-left: 1.2em;

      li {
        padding: 0.4em 0;
      }
    }
    img {
      display: block;
      width: 100%;
      height: auto;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
    }
    iframe,
    video {
      background-color: #000;
      width: 100%;
      aspect-ratio: 16/9;
      margin-bottom: 1em;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
    }
    table {
      width: 100%;
      border-top: 1px solid rgba(var(--color-dark), 0.3);
      margin-bottom: 1em;

      thead {
        text-align: left;
        background-color: rgba(var(--color-dark), 0.1);
      }
      th,
      td {
        padding: 0.4em 0.8em;
      }
      tr {
        border-bottom: 1px solid rgba(var(--color-dark), 0.3);
      }
    }
    hr {
      margin: 1em 0;
      border-top: 1px solid rgba(var(--color-dark), 0.6);
    }
    blockquote {
      background-color: rgba(var(--color-dark), 0.06);
      padding: 0.7em 2em;
      border-left: 8px solid rgba(var(--color-dark), 0.5);
      p {
        margin-bottom: 0;
      }
    }
  }
</style>
