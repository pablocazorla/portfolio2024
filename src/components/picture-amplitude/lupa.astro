---
import Button from "@/components/button/index.astro";
import ZoomInIcon from "@/icons/zoom-in.astro";
import getI18nText from "@/i18n/getI18nText.js";

const { es } = Astro.props;
---

<Button
  type="button"
  circular
  color="dark"
  title={getI18nText("lupa.AmpliarImagen", es)}
  className="absolute bottom-1 right-1 z-10 w-8 h-auto aspect-square picture-amplitude-lupa"
>
  <ZoomInIcon size={32} />
</Button>
