---
import Layout from "@/layouts/Layout.astro";
import AboutView from "@/views/about-me/index.astro";
import dataSite from "@/data/data.json";

const { title: titleAbout } = dataSite.sitemap.about;

const { en } = dataSite.homeContent.descriptionText;
---

<Layout
  title={titleAbout}
  image={`header/${dataSite.headerContent.mainImage}`}
  description={en.join(" ")}
>
  <AboutView />
</Layout>
