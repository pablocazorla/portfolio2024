---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import dataSite from "@/data/data.json";
import WorkView from "@/views/work/list/index.astro";

const { title, description } = dataSite.sitemap.work.es;
const workData = await getCollection("portfolio");

const work = workData.sort((a, b) => {
  return a.data.order - b.data.order;
})[0];

const { path, thumbnail } = work.data;
---

<Layout
  title={title}
  description={description}
  image={`${path}/${thumbnail}`}
  es
>
  <WorkView es />
</Layout>
